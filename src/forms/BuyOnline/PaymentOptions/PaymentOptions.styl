.payment-options {
  &__heading {
    margin 0
    font-size 14px
    font-weight 400
  }

  &__list {
    margin-top 12px !important
  }

  &__active-schema {
    margin-top 22px
    padding-left 28px
  }

  &__active-schema-paragraph {
    display flex
    flex-wrap wrap
    margin 0
  }

  &__active-schema-value-separator {
    min-width 20px
    flex-basis 20px
    margin 0 3px 5px
    flex-grow 8
    flex-shrink 0
    border-bottom 1px dotted
  }

  &__active-schema-value {
    flex-grow: 1;
    flex-basis: 20%;
  }

  &__active-schema-deadline {
    flex-basis 100%
    flex-grow 1
    flex-shrink 0
    width 100%
  }

  &__active-schema-deadline-date {
    font-weight 600
    color #f37321
  }
}


@media all and (min-width: 900px) {
  .payment-options {
    &__active-schema-paragraph {
      &:first-child {
        & .payment-options__active-schema-value {
          flex-basis 57%
        }
      }

      &:nth-child(2) {
        & .payment-options__active-schema-value {
          flex-grow 0
          flex-basis 14.5%
        }
      }
    }

    &__active-schema-deadline {
      flex-basis 43%
    }
  }
}
