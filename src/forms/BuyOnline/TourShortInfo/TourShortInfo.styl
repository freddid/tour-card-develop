.tour-short-info {

  &__basic-info {
    padding 18px 16px
    border-radius 4px
    background-color #f6f6ff

    & .price-checked-online {
      margin 0
      font-size 14px
      text-align left !important

      &__text-on, &__text-off {

        &::before {
          position static !important
          vertical-align middle
          width 12px
          height 12px
          font-size 5px
          line-height 2
        }
      }

      &__text-on::before {
        margin 0 3px 3px 0 !important
      }

      &__text-off::before {
        margin 0 2px 2px 0 !important
      }
    }
  }

  &__tour-price {
    margin 0
    font-size 24px
    font-weight 700
    color #313140
    text-wrap nowrap
  }

  &__discount {
    font-size 17px
    color #d80000d1
    margin-bottom 8px
    line-height 8px
  }

  &__final-price {
    font-size 18px
    margin 6px 0 8px
    font-weight bolder
  }


  &__tour-dates-info {
    margin-top 14px
  }

  &__paragraph {
    margin 2px 0 0 0
    font-size 14px

    &_tour-info-mobile {
      margin-top 14px
      font-size 14px
      line-height 24px
    }

    &_direction-info-mobile {
      margin-bottom 14px
    }
  }
}

@media all and (min-width: 900px) {

  .tour-short-info {
    flex-grow 1
    position relative
    font-size 14px

    &__sticky-block {
      width 240px
      z-index 1

      &_sticky {
        position fixed
        top 0
      }

      &_over-sticky {
        position absolute
        bottom 222px
      }
    }

    &__basic-info {
      padding 12px 18px 18px
    }

    &__tour-price {
      font-size 38px
      height 58px
    }

    &__discount {
      font-size 17px
      color #d80000d1
    }

    &__final-price {
      font-size 18px
      margin 6px 0 8px
      font-weight bolder
    }

    &__price-label {
      color #313140
      margin-right 6px
    }

    &__paragraph {

      &_tourists-info {
        margin 18px 0 0 0
      }

      &_services-list {
        margin 0
      }
    }

    &__paragraph-bold {
      font-weight 600
    }

    &__tour-dates-info {
      margin-top 18px
    }

    & .hotel-name {
      margin-top 22px
    }

    &__tour-operator-info {
      display flex
      margin-top 20px
    }

    &__tour-operator-name {
      margin-right 26px
    }

    &__tour-operator-logo {
      display flex
      align-items center
    }

    &__tour-operator-logo-img {
      max-width 95px
    }
  }
}

