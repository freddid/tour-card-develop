.tour-control {
  list-style none
  margin 0 0 0 4px
  padding 0

  &__item {
    display inline-block
    margin-left 2%

    &:first-child {
      margin-left 0
    }
  }

  &__button {
    text-decoration none
    appearance none
    border 0
    background none
    cursor pointer
    outline 0
    color #fff
  }

  &__icon {
    display inline-block
    vertical-align middle
    width 20px
    height 20px
  }

  &__text {
    display inline-block
    vertical-align middle
    margin 0 0 0 3px
  }
}