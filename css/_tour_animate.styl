.card-wrapper {
    &.tour-card-animate {
        &-appear,
        &-enter  {
            opacity 0
            &&-active {
                opacity 1
                transition opacity 1s cubic-bezier(.82,-.41,.15,1.3)
            }
        }
        &-leave  {
            opacity: 1
            &&-active {
                opacity 0
                transition opacity 1s cubic-bezier(.82,-.41,.15,1.3)
            }
        }
    }
}
