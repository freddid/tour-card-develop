.baggage_border {
    position: relative;
    top: -20px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: fit-content;
    margin: 0 auto;
    margin-top: 2px;
    padding: 4px 8px;
    cursor: pointer; 
    border-radius: 4px;
    gap: 8px;
   
    &_no_border {
        border: 0!important;
        
    }

    &_data_correct {
        &:hover {
            background: #FFF6D4;
        }
    }
    
    &__content {
        margin: 0;
        font-size: 10px;
        color: #0078BE;
        
    }
}

@media screen and (min-width: 576px) {
    .baggage_border{
        border: 1px #F3F3FF solid;

        &__content {
            max-width: 83px;
        }
    }
}
