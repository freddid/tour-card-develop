.uis-loader {
  position absolute 
  top 0 
  bottom 0 
  left  0 
  right 0 
  margin auto 
  z-index 11 
  width 300px 
  height 50px

  & > div {
    content " "
    width 10px
    height 10px
    background #7ac3ff
    border-radius 100%
    position absolute
    animation shift 4s linear infinite

    &:nth-of-type(1) {
      animation-delay -.8s
    }

    &:nth-of-type(2) {
      animation-delay -1.6s
    }

    &:nth-of-type(3) {
      animation-delay -2.4s
    }

    &:nth-of-type(4) {
      animation-delay -3.2s
    }
  }
  &_big > div {
    width 50px
    height 50px
  }
  &_micro {
    width 1.92em
    height .78em
    font-size 1.2em
    line-height 1

    & > div {
      width .5em
      height .5em
      animation shift 2.4s linear infinite
    }
  }

  &_gray > div {
    background-color $colorGray
  }
}

@keyframes shift {
  0% {
    left -30% 
    opacity 0 
  }
  10% {
    left 0 
    opacity 1 
  }
  90% {
    left 80% 
    opacity 1 
  }
  100% {
    left 130% 
    opacity 0 
  }
}