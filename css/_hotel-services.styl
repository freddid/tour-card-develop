.hotel-services {
  padding 0
  margin 20px 0 30px
  font-size 0
  list-style-type none
  color $colorBlack
  column-count 2
  column-width 50%

  &__item {
    min-height 70px
    padding-left 70px
    padding-right 20px
    padding-bottom 10px
    font-size 13px
    background-repeat no-repeat
    background-position left top
    break-inside avoid
  }

  &__icon {
    float left
    line-height 1
    border-radius 5px
    color link-color
    margin-left -70px
    background-color #f3f5f6
    position relative
    text-align center
    box-sizing border-box
    padding 10px
  }

  &__list {
    padding 0
    margin 0
    list-style-type none
  }

  &__title {
    margin 0
    padding 5px 0 0
    font-weight 600
    font-size 15px
    color $colorBlack
  }
}