.rating-circle {
  display inline-block
  vertical-align middle
  white-space nowrap
  margin 4px 0 4px 2%
  padding 0
  list-style none
  direction rtl
  unicode-bidi bidi-override
  letter-spacing -4px
  font-size 14px
  width 404px

  &__item {
    display inline-block
    padding 0 2% 0 0

    &:first-child {
      padding-right 0
    }
  }

  &__num {
    display inline-block
    height 32px
    width 32px
    line-height 32px
    font-weight 600
    text-align center
    border 1px solid #ffcc00
    border-radius 50%
    margin 0
    padding 0
    letter-spacing normal
    cursor pointer
    transition all .1s ease-out
  }

  &-double {
    display none
  }
}

.rating-circle:hover .rating-circle__item_selected ~ .rating-circle__item .rating-circle__num,
.rating-circle:hover .rating-circle__item_selected .rating-circle__num {
  background-color transparent
}

.rating-circle__item:hover .rating-circle__num,
.rating-circle:hover .rating-circle__item:hover .rating-circle__num,
.rating-circle__item:hover ~ .rating-circle__item .rating-circle__num,
.rating-circle:hover .rating-circle__item:hover ~ .rating-circle__item .rating-circle__num,
.rating-circle__item_selected .rating-circle__num,
.rating-circle__item_selected ~ .rating-circle__item .rating-circle__num {
  background-color #ffcc00
}