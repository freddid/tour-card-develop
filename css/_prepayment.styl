.prepayment {
  margin-top 20px
  padding 16px 16px 20px
  border 1px solid #dadae5
  display flex
  flex-wrap wrap
  position relative

  &__tour-price {
    font-size 18px
    margin 0 0 20px
    font-weight bold
    width 100%
  }

  &__scheme {
    width 300px
  }

  &__scheme-title {
    font-weight bold
    margin 0 0 12px
  }

  &__scheme-description {
    background-color #fff
    border-radius 4px
    padding 25px 36px
    flex 1 1 0%
  }

  &__parameters {
    margin -0.8em 0 0
    padding 0
    display table
    table-layout fixed
    width 100%

    &-item {
      display table-row
    }

    &-name {
      display table-cell
      padding .8em 0 .1em
      max-width 200px
      font-weight 600
      overflow hidden

      &:after {
        content '..................................................................................................'
        color $colorGray
        width 0
        display inline-block
        font-weight 400
        font-size .76em
      }
    }

    &-value {
      box-sizing border-box
      padding .8em 0 .1em .76em
      display table-cell
      margin 0
      font-size 15px
      font-weight bold

    }

    &-loader {
      position relative
      max-width 100px
      padding .4em 0 .45em .76em
    }

    &-time {
      margin 0
    }

    &-time-date {
      font-weight bold
      color #fe0130
    }
  }

}