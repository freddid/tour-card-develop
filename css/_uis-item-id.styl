.uis-item-id {
  padding 0
  margin 0
  position relative
  outline 0
  border none
  min-width 0

  &__label {
    display inline-block
    margin 0 0 6px
    cursor pointer
    font-size 13px
    color inherit
  }

  &__fields {
    display flex
    justify-content space-between
    flex-wrap nowrap
  }

  &__series {
    min-width 0
    flex-basis 80px
    max-width 80px
    margin-right 10px
  }

  &__number {
    min-width 0
    flex-grow 1
    position static
  }
}