@media all and (min-width: 480px) and (max-width: 759px) {
  .card-hotel {

    &__title {
      margin-left -($cardPaddingMedia480)
      margin-right -($cardPaddingMedia480)
      padding 12px $cardPaddingMedia480 8px
    }

    &__gallery {
      float none
      width auto
    }

    &__description-short {
      float none
      width auto
      margin-bottom $cardPaddingMedia480
    }
  }
}