.share-links {
  background: rgba(250, 250, 250, 0.9);
  border: 1px solid #888;
  border-radius: 2px;
  position: absolute;
  list-style-type: none;
  top: -26px;
  left: 6px;
  margin: 0;
  padding: 0;


  &__item {
    color: #1d99dc;
    cursor: pointer;
    float: left;
    list-style-type: none;
    margin: 2px;
    position: relative;
    width: 28px;
    height: 28px;
  }

  &__item.vk-share-link {
    background: url("data:image/png;base64,") center no-repeat #547697;
  }

  &__item.ok-share-link {
    overflow: hidden;
  }

  &__item #ok-share-button {
    position: absolute;
    left: -1px;
    top: -1px;
  }

  &__item.twitter-share-link {
    overflow: hidden;
  }

  &__item #twitter-share-button {
    position: absolute;
    left: -3px;
    top: 0;
  }

  &__item.whatsapp-share-link {
    overflow: hidden;
  }

  &__item #whatsapp-share-button {
    position: absolute;
    left: -3px;
    top: 0;
  }

  &__item.full-share-link {
    background: url("data:image/png;base64,") center no-repeat #93d10e;
  }

  &-wrapper {
    position: relative;
    width: 170px;
  }

  .hidden,
  &-wrapper.hidden iframe {
    visibility: hidden !important;
  }
}