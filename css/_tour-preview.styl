.tour-preview {

  &__link {
    display block
    position relative
    text-decoration none
    line-height .5

    img {
      width 100%
      height auto
    }

    &:hover {
      cursor pointer
    }

    &:hover span {
      border-bottom-color transparent
    }
  }

  &__count-image {
    position absolute
    bottom 0
    left 0
    right 0
    background-image linear-gradient(to top, rgba(0,0,0,.7) 0%, rgba(0,0,0,0) 100%)
    text-align center
    padding .76em 0 .61em
    line-height 1.4

    span {
      border-bottom 1px dotted
      color #fff
      font-size .85em
      font-weight 600
      text-transform uppercase
      position relative
      margin-left 2em
      display inline-block
      TransitionHover()

      &:before {
        content ''
        background-image url('data:image/svg+xml;base64,')
        background-position left center
        background-repeat no-repeat
        width 1.8em
        height 1.6em
        display inline-block
        position absolute
        left -2em
      }
    }
  }
}
