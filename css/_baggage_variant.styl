.baggage_variant {
    display: flex;
    align-items: end;
    justify-content: space-around;
    font-family: 'Open Sans', sans-serif;

    &_vertical{
        flex-direction: column;
        height: 29px;  
    }

    &_horizontal{
        flex-direction: row;
        min-width: 20px;
        max-width: 20px;
        height: 17px;
    }

    &__status{
        &_undefined{
            color:#313140
        }
        &_differentWeights{
            color:#FF9207
        }
        &_notIncluded{
            color:#FB4242
        }
        &_unknown{
            color:#999999
        }
    }
    &__content {
        position: relative;
        z-index: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        margin-top: auto;
        font-size: 6px;
        color: white;
    }

    &__icon {
        position: absolute;
        width: 100%;
        height: 100%;
    }
   & .baggage {
        position: relative;
        display: flex;
        width: 9px;
        height: 17px;
        &__content {
            height: 64.7%;  
            margin-bottom: 22.2%;
        }
    }
    & .luggage {
        position: relative;
        display: flex;
        width: 9px;
        height: 9px;
        &__content {
            height: 77%;
        }
    }
}
  
