.agency {
  border 1px solid #dadae5
  padding 12%
  box-sizing border-box
  text-align center

  &__item {
    margin 1em 0
    font-size 1.15em

    &_description {
      font-size 1em
      word-break: break-word
    }
  }

  &__header {
    word-break break-word
  }

  &__logotype {
    margin-bottom 2em
    max-width 100%
  }

  &__link {
    color link-color
    text-decoration none
  }
}
