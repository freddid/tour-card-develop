.card {
  font 13px/1.5 "Open Sans", Arial, sans-serif
  color $colorBlack
  padding 10px 4px
  box-sizing border-box
  min-height 100%

  &_load {

    & ^[0]__controls {
      opacity 0
    }

    & ^[0]__wrapper {
      opacity 0
    }
  }


  &__block-top {
    padding-bottom 30px

    &:after {
      content ''
      display table
      width 100%
    }
  }

  &__controls {
    width 100%
    max-width 950px
    margin auto
    display flex
    justify-content space-between
    box-sizing border-box
    opacity 1
    transition opacity .5s

    &:before {
      content ''
      width 1px
    }
  }

  &__events {
    flex 1 1 0%
    text-align left
    padding 10px 0
  }

  &__close {
    text-align right
    padding 10px 0
    margin-right 4px
  }

  &__wrapper{
    background-color #fff
    border-radius 4px
    padding 0 $cardPadding
    max-width 950px
    width 100%
    box-sizing border-box
    margin auto
    position relative
    min-height 600px
    opacity 1
    transition opacity .5s
  }

  &__tour-description {
    margin-right auto
    padding-top $cardPadding
  }

  &__tour-price {
    width 242px
    float right
    margin-left 10px
    margin-top $cardPadding
    background-color $backgroundGray
    border-bottom-left-radius 4px
    border-bottom-right-radius 4px
  }

  &__hotel-description {
    clear both
    margin 0
  }

  &__hotel-forms {
    min-height 58px

    & > div:not([class*='uikit-tabs']) {
      padding $cardPadding
      margin-left -($cardPadding)
      margin-right -($cardPadding)
      background-color #f3f3ff
    }
  }
}
