.hotel-rating {
  white-space nowrap

  &:before {
    content ', '
  }

  &__star {
    position relative
    display inline-block
    top 2px
    margin-right 2px
    width 12px
    height 1em
    color #f6a816
    fill #f6a816


    &_hotel-title {
      width 20px
      if star is defined {
        color star
        fill star
      }
    }

